{
	"name": "Emmet Re:view",
	"description": "Fast and easy way to test your responsive design in multiple viewports",
	"short_name": "Re:view",
	"version": "2.0.0",
	"permissions": [
		"activeTab",
		"storage",
		"webRequest",
		"webRequestBlocking",
		"http://*/*",
		"https://*/*"
	],
	"background": {
		"scripts": ["scripts/background.js"]
	},
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*", "file:///*"],
		"js": ["scripts/override-ua.js"],
		"run_at": "document_start",
		"all_frames": true
    }],
	"browser_action": {
		"default_title": "Emmet Re:View",
		"default_icon": {
			"38": "icons/browser-action.png"
		}
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://www.google.com https://*.carbonads.com; object-src 'self'",
	"web_accessible_resources": ["proxy"],
	"manifest_version": 2
}
